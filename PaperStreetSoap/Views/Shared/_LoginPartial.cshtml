@using Microsoft.AspNetCore.Identity
@using ProjectBase.Core.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
        <button type="submit" class="btn btn-primary py-2 mr-2 px-lg-5 d-none d-lg-block mt-3" id="logout-button">Logout</button>
    </form>
}
else
{
    <a class="btn btn-primary py-2 mr-1 px-lg-5 d-none d-lg-block mt-3" id="login-button" asp-area="Identity" asp-page="/Account/Login">
        Login
    </a>
}