@model IEnumerable<PaperStreetSoap.Core.Models.Video>
@using ProjectBase.Core.Utils;

<!-- Videos Table Start -->
<div class="row g-4">
    <div class="col-lg-12">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table id="videos-table" class="table table-striped table-bordered table-sm " cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="th-sm">
                                Title
                            </th>
                            <th class="th-sm min-phone-l">
                                Summary
                            </th>
                            <th class="th-sm">
                                Date
                            </th>
                            <th class="th-sm no-sort">

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var videoModel in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="@ViewData["Section"]" asp-action="Video" asp-route-id="@videoModel.Id" asp-route-videoTitle="@($"{videoModel.Title.UrlFriendly()}")" asp-route-category="@ViewData["Category"]">
                                            @videoModel.Title
                                        </a>
                                    </td>
                                    <td class="min-phone-l">@Html.Raw(videoModel.Details)</td>
                                    <td>@videoModel.Date.ToLongDateString()</td>
                                    <td class="text-center">
                                        <a class="btn btn-primary" asp-controller="@ViewData["Section"]" asp-action="Video" asp-route-id="@videoModel.Id" asp-route-videoTitle="@($"{videoModel.Title.UrlFriendly()}")" asp-route-category="@ViewData["Category"]">
                                            View
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <h5>No @ViewData["Title"] availabe</h5>
        }
    </div>
</div>
<!-- Videos Table End -->
