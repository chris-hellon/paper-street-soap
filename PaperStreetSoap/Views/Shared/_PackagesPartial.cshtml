@model IEnumerable<PaperStreetSoap.Core.Models.Package>
<!-- Packages Start -->
<div class="container-xxl py-5">
    <div class="container p-0">
        <div class="row g-4 justify-content-center">
            @if (Model.Any())
                {
                    double wowDelay = 0.1;
                    var cssClass = Model.Count() > 3 ? "col-lg-3 col-md-6" : "col-lg-4 col-md-6";

                    foreach (var packageModel in Model)
                    {
                        packageModel.CssClass = cssClass;
                        packageModel.WowDelay = wowDelay;

                        await Html.RenderPartialAsync("_PackagePartial", packageModel);

                        wowDelay += 0.2;
                    }
                }
        </div>
    </div>
</div>
<!-- Packages End -->