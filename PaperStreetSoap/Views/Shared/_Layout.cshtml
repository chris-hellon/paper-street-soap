<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    @{
        var location = new Uri($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}{Context.Request.QueryString}");
        var url = location.AbsoluteUri;

        var title = ViewData["Title"] != null && ViewData["Title"]?.ToString()?.Length > 0 ? ViewData["Title"]?.ToString() + " | PaperStreetSoap | Trading | Resources | Research" : "PaperStreetSoap | Trading | Resources | Research";

        <title>@title</title>

        <meta name="keywords" content="paper street soap,fight club,trading,cryptocurrency,crypto,cryptocurrency trading,bitcoin,ethereum,tyler durden,stocks,markets" />
        <meta name="description" content="Welcome to Fight Club..." />
        <meta property="og:site_name" content="paperstreetsoap.io" />
        <meta property="og:description" content="Welcome to Fight Club...." />
        <meta property="og:title" content="@title" />
        <meta property="og:url" content="@url" />
        <meta property="og:image" content="https://paperstreetsoap.azureedge.net/site/paper-street-soap-banner.webp" />
        <meta property="og:type" content="website" />
        <meta property="twitter:url" content="@url" />
        <meta property="twitter:title" content="@title" />
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:description" content="Welcome to Fight Club..." />
        <meta property="twitter:image" content="https://paperstreetsoap.azureedge.net/site/paper-street-soap-banner.webp" />

        <link rel="canonical" href="@url" />
    }

    <link href="https://paperstreetsoap.io" rel="home" />

    <!-- Favicon -->
    <link href="https://paperstreetsoap.azureedge.net/site/favicon.ico" rel="icon">

    <style type="text/css">
        /*** Spinner ***/
        #spinner {
            opacity: 0;
            visibility: hidden;
            transition: opacity .5s ease-out, visibility 0s linear .5s;
            z-index: 99999;
            align-items: center !important;
            background-color: #fff !important;
            justify-content: center !important;
            height: 100vh !important;
            width: 100% !important;
            transform: translate(-50%, -50%) !important;
            left: 50% !important;
            top: 50% !important;
            display: flex !important;
            position: fixed !important;
        }

        .spinner-border {
            display: inline-block;
            vertical-align: -0.125em;
            border: 0.25em solid currentColor;
            border-right-color: transparent;
            border-radius: 50%;
            animation: .75s linear infinite spinner-border;
            color: #ED85C7 !important;
        }

        #spinner.show {
            transition: opacity .5s ease-out, visibility 0s linear 0s;
            visibility: visible;
            opacity: 1;
        }

        .content-loader {
            display: block;
            width: 100%;
            text-align: center;
        }
    </style>

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" async />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin async />

    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&family=Permanent+Marker&family=Gamer&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&family=Permanent+Marker&family=Gamer&display=swap"></noscript>

    <!-- Icon Font Stylesheet -->
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"></noscript>

    <!-- Libraries Stylesheet -->
    <link rel="preload" href="https://paperstreetsoap.azureedge.net/site/animate.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://paperstreetsoap.azureedge.net/site/animate.min.css"></noscript>

    <!-- Customized Bootstrap Stylesheet -->
    <link rel="preload" href="https://paperstreetsoap.azureedge.net/site/bootstrap.min.css" as="style" asp-append-version="true" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://paperstreetsoap.azureedge.net/site/bootstrap.min.css" asp-append-version="true"></noscript>

    <!-- Template Stylesheet -->
    <link rel="preload" href="https://paperstreetsoap.azureedge.net/site/app.min.css" as="style" asp-append-version="true" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://paperstreetsoap.azureedge.net/site/app.min.css" asp-append-version="true"></noscript>

    @await RenderSectionAsync("Styles", required: false)

    <!-- Live Chat Js -->
    <script src="//code.tidio.co/iuo2wq5fierj9uyuqfzvwkrkhfxntmju.js" async></script>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-1T5H09ZF8X"></script>
    <script>window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-1T5H09ZF8X');</script>
</head>
<body onbeforeunload="document.getElementById('spinner').classList.add('show');">
    <!-- Spinner Start -->
    <div id="spinner" class="show">
        <div class="spinner-border" role="status">

        </div>
    </div>
    <!-- Spinner End -->

    <div id="page-wrap">
        @{
            await Html.RenderPartialAsync("~/Views/Shared/_NavigationPartial.cshtml");
            @RenderBody()
        }
    </div>

    @{
        await Html.RenderPartialAsync("~/Views/Shared/_FooterPartial.cshtml");
    }

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js" integrity="sha512-57oZ/vW8ANMjR/KQ6Be9v/+/h6bq9/l3f0Oc7vn6qMqyhvPd1cvKBRWWpzu0QoneImqr2SkmO4MSqU+RpHom3Q==" crossorigin="anonymous" referrerpolicy="no-referrer" async></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" async></script>
    <script src="https://kit.fontawesome.com/ec8b570ee5.js" crossorigin="anonymous" async></script>
    <script src="https://paperstreetsoap.azureedge.net/site/wow.min.js" async></script>
    <script src="https://paperstreetsoap.azureedge.net/site/easing.min.js" async></script>

    <!-- Template Javascript -->
    <script src="https://paperstreetsoap.azureedge.net/site/main.min.js" asp-append-version="true" rel="preload" as="script" defer></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

