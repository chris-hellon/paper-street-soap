@page "/select-payment-method/{packageId}"
@model PaperStreetSoap.Areas.Identity.Pages.Account.SelectPaymentMethodModel

@{
    ViewData["Title"] = "Select Payment Method";
    await Html.RenderPartialAsync("~/Views/Shared/_PageHeaderPartial.cshtml", new PaperStreetSoap.Views.Shared.PageHeaderPartialModel(true, true));
}

<!-- Packages Start -->
<div class="container-xxl py-5">
    <div class="container p-0">
        <div class="row g-4 align-content-center justify-content-center">
            <div class="col-lg-12 align-self-center text-center wow fadeInUp" data-wow-delay="0.1s">
                <form method="POST" action="@($"https://mainnet.demo.btcpayserver.org/apps/3QLVRfSVzu1TcweqXqWBhEd8Bs2N/pos")">
                    <input type="hidden" name="email" value="@Model.CustomerEmail" />
                    <input type="hidden" name="redirectUrl" value="@Model.RedirectUrl" />
                    <button class="button-with-image" type="submit" name="choiceKey" value="@Model.ChoiceKey.ToLower()"><img src="https://paperstreetsoap.azureedge.net/site/btcpay_black.webp" class="img-fluid w-50" alt="BTC pay server option" /></button>
                </form>
            </div>
        </div>
    </div>
</div>

